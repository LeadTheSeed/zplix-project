# Application
NODE_ENV=development
PORT=3000
APP_NAME=Niqati Platform
APP_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://niqati_user:password@localhost:5432/niqati_db
DB_PASSWORD=your_secure_password

# Redis
REDIS_URL=redis://:password@localhost:6379
REDIS_PASSWORD=your_redis_password

# RabbitMQ
RABBITMQ_URL=amqp://niqati:password@localhost:5672
RABBITMQ_PASSWORD=your_rabbitmq_password

# Security
JWT_SECRET=your_jwt_secret_min_32_characters_long
JWT_EXPIRY=7d
ENCRYPTION_KEY=your_32_character_encryption_key
BCRYPT_ROUNDS=10

# Blockchain - Tron Network
TRON_NODE_URL=https://api.trongrid.io
TRON_API_KEY=your_tron_api_key
TRON_PRIVATE_KEY=your_tron_private_key_encrypted

# Blockchain - Ethereum Network (Backup)
ETHEREUM_NODE_URL=https://mainnet.infura.io/v3/your_infura_key
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key_encrypted

# Wallet Configuration
HOT_WALLET_ADDRESS=TRX_hot_wallet_address
HOT_WALLET_PRIVATE_KEY=encrypted_hot_wallet_private_key
COLD_WALLET_ADDRESS=TRX_cold_wallet_address
HOT_WALLET_PERCENTAGE=5
MULTISIG_THRESHOLD=2
MULTISIG_SIGNERS=3

# USDT Contract Addresses
USDT_TRC20_CONTRACT=TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t
USDT_ERC20_CONTRACT=0xdAC17F958D2ee523a2206206994597C13D831ec7

# Exchange Rates
PLATFORM_MARGIN_PERCENTAGE=5
EXCHANGE_RATE_UPDATE_INTERVAL=60000

# Payment Gateway - Bank Transfer (Phase 1)
BANK_NAME=Emirates NBD
BANK_ACCOUNT_NUMBER=1234567890
BANK_IBAN=AE123456789012345678901
BANK_SWIFT_CODE=EBILAEAD
PAYMENT_VALIDITY_HOURS=48

# Email Configuration (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@niqati.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=Niqati Platform <noreply@niqati.com>

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# WhatsApp Business API
WHATSAPP_API_URL=https://api.whatsapp.com
WHATSAPP_API_TOKEN=your_whatsapp_token
WHATSAPP_PHONE_NUMBER=+971501234567

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# KYC/AML
KYC_REQUIRED_THRESHOLD=1000
AML_CHECK_ENABLED=true
KYC_PROVIDER_API_KEY=your_kyc_provider_key

# Admin
ADMIN_EMAIL=admin@niqati.com
ADMIN_PASSWORD=initial_admin_password
PGADMIN_PASSWORD=pgadmin_password

# Monitoring
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project
DATADOG_API_KEY=your_datadog_api_key
LOG_LEVEL=debug

# External APIs
CURRENCY_API_KEY=your_currency_api_key
CURRENCY_API_URL=https://api.exchangerate-api.com/v4/latest/USD

# Feature Flags
ENABLE_CRYPTO_PAYMENTS=false
ENABLE_CARD_PAYMENTS=false
ENABLE_WALLET_WITHDRAWALS=false
ENABLE_MERCHANT_SETTLEMENTS=true
ENABLE_AUTO_VERIFICATION=false

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System under maintenance. Please try again later.
